{
  "name": "svelte-breakpoints",
  "version": "1.0.0-beta.1",
  "description": "Svelte component and helper function for creating easy dynamic layouts with CSS media queries.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiosion/svelte-breakpoints.git"
  },
  "bugs": {
    "url": "https://github.com/kiosion/svelte-breakpoints/issues"
  },
  "author": "kiosion",
  "license": "MIT",
  "keywords": [
    "svelte",
    "breakpoints",
    "media queries",
    "responsive"
  ],
  "packageManager": "pnpm@8.12.1",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest --no-watch"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0-next.89"
  },
  "devDependencies": {
    "@playwright/test": "1.42.1",
    "@sveltejs/adapter-auto": "3.1.1",
    "@sveltejs/kit": "2.5.4",
    "@sveltejs/package": "2.3.0",
    "@sveltejs/vite-plugin-svelte": "3.0.2",
    "@types/eslint": "8.56.6",
    "@typescript-eslint/eslint-plugin": "7.4.0",
    "@typescript-eslint/parser": "7.7.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-svelte": "2.35.1",
    "jsdom": "24.0.0",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "3.2.2",
    "publint": "0.2.7",
    "svelte": "5.0.0-next.90",
    "svelte-check": "3.6.8",
    "tslib": "2.6.2",
    "typescript": "5.4.3",
    "vite": "5.2.7",
    "vitest": "1.4.0"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module"
}
